<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="appInfoCustomFormatter" class="net.sf.appinfo.spring.example.CustomApplicationInfoFormatter" init-method="printInfo">
        <constructor-arg ref="chainedAppInfo"/>
    </bean>

    <bean id="customAppInfoText" class="java.lang.String" factory-bean="appInfoCustomFormatter" factory-method="getInfo"/>

</beans>
